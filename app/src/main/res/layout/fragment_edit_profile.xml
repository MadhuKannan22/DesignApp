<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EditProfileFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textview_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/colors"
        android:gravity="center"
        android:padding="10dp"
        android:text="Edit Profile"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_logo" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_text_Name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/edittext_border"
        android:hint=" First Name"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColorHint="#AAB2C1"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_edit_profile" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/edit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:textSize="8sp"
        android:background="@drawable/ic_action_editprofile"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/edit_text_Name"
        app:layout_constraintTop_toBottomOf="@id/textview_edit_profile" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_text_lastName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/edittext_border"
        android:hint="Last Name"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColorHint="#AAB2C1"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_Name" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/edit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/ic_action_editprofile"
        android:gravity="center"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@id/edit_text_lastName"
        app:layout_constraintTop_toBottomOf="@id/edit1" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/select_State"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/edittext_border"
        android:hint="Select Your State"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColorHint="#AAB2C1"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_lastName" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/edit3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/ic_action_editprofile"
        android:gravity="center"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/select_State"
        app:layout_constraintTop_toBottomOf="@id/edit2" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/MobileNum"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/edittext_border"
        android:hint="Enter mobile number"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColorHint="#AAB2C1"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/select_State" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/edit4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/ic_action_editprofile"
        android:gravity="center"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/MobileNum"
        app:layout_constraintTop_toBottomOf="@id/edit3" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_text_Email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/edittext_border"
        android:gravity="start"
        android:hint="Enter Email"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:textColorHint="#AAB2C1"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MobileNum" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/edit5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/ic_action_editprofile"
        android:gravity="center"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/edit_text_Email"
        app:layout_constraintTop_toBottomOf="@id/edit4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save_changes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/button_border"
        android:text="Save Changes"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_Email" />


</androidx.constraintlayout.widget.ConstraintLayout>