<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ContactFragment">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textview_contact_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/colors"
        android:gravity="center"
        android:padding="10dp"
        android:text="Contact us"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_logo" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_text_Name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/edittext_border"
        android:hint="Name"
        android:textSize="15sp"
        android:paddingStart="10dp"
        android:textColorHint="#AAB2C1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_contact_us" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/icon_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:textSize="10sp"
        android:background="@drawable/ic_action_person"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/edit_text_Name"
        app:layout_constraintTop_toBottomOf="@id/textview_contact_us" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_text_MobileNumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/edittext_border"
        android:hint="Enter mobile number"
        android:textSize="15sp"
        android:paddingStart="10dp"
        android:textColorHint="#AAB2C1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_Name" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/icon_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/ic_action_phone"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/edit_text_MobileNumber"
        app:layout_constraintTop_toBottomOf="@id/icon_person" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_text_Email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/edittext_border"
        android:hint="Enter Email"
        android:textSize="15sp"
        android:paddingStart="10dp"
        android:textColorHint="#AAB2C1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_MobileNumber" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/icon_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_action_message"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/edit_text_Email"
        app:layout_constraintTop_toBottomOf="@id/icon_phone" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_text_suggestion"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/edittext_border"
        android:gravity="start"
        android:textSize="15sp"
        android:hint="Type your suggestion here..."
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:textColorHint="#AAB2C1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_Email" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/icon_disturb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/ic_action_do_not_disturb"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/edit_text_suggestion"
        app:layout_constraintTop_toBottomOf="@id/icon_message" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Reach_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/button_border"
        android:text="Reach us"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_suggestion" />


</androidx.constraintlayout.widget.ConstraintLayout>